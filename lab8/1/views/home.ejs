<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .content-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            gap: 24px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th,
        table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #f2f2f2;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .add-user-link {
            display: block;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            padding: 12px;
            border-radius: 4px;
            margin-top: 24px;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="content-container">
            <h1>Users data</h1>
            <table>
                <thead>
                    <tr>
                        <th>UserID</th>
                        <th>UserName</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Age</th>
                        <th>Address</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.password %></td>
                            <td><%= user.email %></td>
                            <td><%= user.firstname %></td>
                            <td><%= user.lastname %></td>
                            <td><%= user.age %></td>
                            <td><%= user.address %></td>
                            <td><%= user.phone %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <a class="add-user-link" href="/form">Add User</a>
        </div>
    </div>
</body>
</html>
