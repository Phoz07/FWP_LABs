<div class="cart-container">
    <h1>Cart</h1>
    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Storage</th>
                <th>Camera</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(item=> { %>
                <tr>
                    <td>
                        <%= item.id %>
                    </td>
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.price %>
                    </td>
                    <td>
                        <%= item.storage %>
                    </td>
                    <td>
                        <%= item.camera %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <h2>Total: <%= data.reduce((sum, item)=> sum + item.price, 0) %></h2>
    <div>
        <a href="/" class="button">Products</a>
        <a href="/clear-cart" class="button button-outline">Clear Cart</a>
    </div>
</div>