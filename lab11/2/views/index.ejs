<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AUNTIE-AUN Restaurant | <%= title %></title>
    <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
    <%- include('components/navbar.ejs') %>
    <div class="container">
        <%- include('components/'+body+'.ejs') %>
    </div>
    <script>
        const addToCart = async (id) => {
            try {
                const response = await fetch('http://localhost:3000/api/cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        id: id
                    })
                })
                if (response.ok) {
                    alert('Added to cart!')
                }
            } catch(error) {
                console.log(error)
            }
        }

        const clearCart = async () => {
            if (confirm('Are you sure you want to clear your cart?')) {
                try {
                    const response = await fetch('http://localhost:3000/api/cart', {
                        method: 'DELETE'
                    })
                    if (response.ok) {
                        location.reload()
                    }
                } catch(error) {
                    console.log(error)
                }
            }
        }

        const confirmOrder = async () => {
            if (confirm('Are you sure you want to confirm your order?')) {
                try {
                    const response = await fetch('http://localhost:3000/api/cart', {
                        method: 'DELETE'
                    })
                    if (response.ok) {
                        alert('Order confirmed successfully! Your cart has been cleared.')
                        location.reload()
                    }
                } catch(error) {
                    console.log(error)
                }
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const totalPriceElement = document.getElementById('total-price')
            if (totalPriceElement) {
                const prices = Array.from(document.querySelectorAll('.cart-table td:nth-child(4)'))
                    .map(el => parseInt(el.textContent))
                    .filter(price => !isNaN(price))
                const total = prices.reduce((sum, price) => sum + price, 0)
                totalPriceElement.textContent = total
            }
        })
    </script>
</body>
</html>