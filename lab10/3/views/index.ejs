<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
    <link rel="stylesheet" href="/styles/global.css">
</head>

<body>
    <div class="container">
        <div class="book-container">
            <h1>Book Store</h1>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Book name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book=> { %>
                        <tr>
                            <td>
                                <%= book.id %>
                            </td>
                            <td>
                                <%= book.name %>
                            </td>
                            <td>
                                <%= book.description %>
                            </td>
                            <td>
                                <%= book.price %>
                            </td>
                            <td>
                                <%= book.amount %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>